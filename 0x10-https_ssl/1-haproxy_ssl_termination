frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/csr/0000-csr-certbot.pem
    mode http
    option httplog
    option forwardfor
    reqadd X-Forwarded-Proto:\ https
    acl is_root path /
    use_backend www-backend if is_root
backend www-backend
    mode http
    balance roundrobin
    option httplog
    option forwardfor
    http-request set-header X-Forwarded-Port %[dst_port]
    http-request add-header X-Forwarded-Proto https if { ssl_fc }
    http-response set-var(resp.body) res.body
    http-response set-var(txn.holberton) str(Holberton School)
    http-response set-var(txn.contains_holberton) if(strstr(txn.holberton, resp.body))
    server 98038-lb-01 34.207.57.188 check

listen stats
    bind *:9000
    mode http
    stats enable
    stats uri /
